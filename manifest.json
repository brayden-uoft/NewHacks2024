{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "background": {
    "service-worker": "src/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Click to open panel",
    "default_icon": "hello_extensions.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation",
    "sidePanel",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/homographs.json"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["src/common_domains.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}