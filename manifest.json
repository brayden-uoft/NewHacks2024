{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "background": {
    "service_worker": "src/service-worker.js",
    "load_listener": "src/load-listener.js"
  },
  "action": {
    "default_title": "Click to open panel",
    "default_icon": "hello_extensions.png"
  },
  "permissions": [
    "sidePanel",
    "tabs"
  ],
  "content_scripts": [
    {
      "js": [
        "src/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}